<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SplashScreenFragment"
    android:background="@color/primary"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find your"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:layout_marginTop="@android:dimen/app_icon_size"
        android:layout_marginLeft="@android:dimen/app_icon_size"
        android:id="@+id/text1"
        >
    </TextView>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dream Job!"
        android:textSize="30dp"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/white"
        android:layout_marginLeft="@android:dimen/app_icon_size"
        android:layout_below="@id/text1"
        ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="80dp"
            android:layout_height="3dp"
            android:background="@color/white"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="30dp"
            android:layout_height="2dp"
            android:background="@color/white"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="140dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="20dp"
            android:layout_height="2dp"
            android:background="@color/white"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="180dp"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/splashscreen"
        android:layout_below="@+id/text2"
        android:layout_centerVertical="true"
        android:layout_marginTop="40dp"
        android:id="@+id/img1"
        >
    </ImageView>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Make applying for a job easy, find matching vacancies, create impressive applications and keep track of your activities.
        All in one Place!"
        android:textColor="@color/white"
        android:textSize="15dp"
        tools:ignore="TextSizeCheck"></TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/white"
        android:width="300dp"
        android:background="@drawable/rounded"
        android:layout_marginTop="40dp"
        android:textSize="30dp"
        android:text="Let's Go"
        android:gravity="center"
        >
    </Button>

</RelativeLayout>