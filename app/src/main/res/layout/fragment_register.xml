<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.RegisterFragment"
    android:background="@color/primary"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/brand"
        android:layout_marginTop="100dp"
        android:id="@+id/r_img1"
        >
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/r_img1"
        android:text="Registrasi"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:fontFamily="@font/poppinsbold"
        android:layout_marginTop="30dp"
        android:id="@+id/r_text1"
        ></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/r_text1"
        android:padding="30dp"
        android:minWidth="420dp"
        android:id="@+id/r_layout1"
        >

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Username"-->
<!--            android:fontFamily="@font/poppinsbold"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="20dp"-->
<!--            android:id="@+id/r_text2"-->
<!--            >-->
<!--        </TextView>-->

<!--        <EditText-->
<!--            android:id="@+id/r_username"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:height="50dp"-->
<!--            android:textColorHint="@color/white"-->
<!--            android:hint="@string/app_enter_username"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/r_text3"
            >
        </TextView>

        <EditText
            android:id="@+id/r_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:hint="@string/app_enter_email"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/r_text4"
            >
        </TextView>

        <EditText
            android:id="@+id/r_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:hint="@string/app_enter_password" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="20dp"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/white"
            android:background="@drawable/rounded"
            android:layout_marginTop="30dp"
            android:id="@+id/btn_register"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/r_layout1"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Have an account? "
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/white"
            android:textSize="12sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_register"
            android:text="Login Now"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/white"
            />
    </LinearLayout>

</RelativeLayout>